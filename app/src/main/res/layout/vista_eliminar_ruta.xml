<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/cabeceraBorrarRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <Button
        android:id="@+id/eliminarRutaButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/borrar"
        android:background="@drawable/button_styles"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cabeceraBorrarRuta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/noEliminarRutaButton">
    </Button>

    <Button
        android:id="@+id/noEliminarRutaButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:background="@drawable/button_styles"
        app:layout_constraintTop_toTopOf="@id/eliminarRutaButton"
        app:layout_constraintLeft_toRightOf="@id/eliminarRutaButton"
        app:layout_constraintRight_toRightOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>