<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MiPerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/perfil_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borders"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/profileImage"
            app:layout_constraintLeft_toLeftOf="@id/profileImage"
            app:layout_constraintRight_toRightOf="@id/profileImage">
        </TextView>

        <Button
            android:id="@+id/botonMisRutas"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_styles"
            android:text="@string/mis_rutas_btn"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@id/profileName"
            app:layout_constraintLeft_toLeftOf="@id/profileName"
            app:layout_constraintRight_toRightOf="@id/profileName">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>